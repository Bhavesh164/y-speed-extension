{
	"manifest_version": 3,
	"name": "Toggle Youtube speed",
	"version": "1.0",
	"commands": {
		"toggle-speed": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y"
			},
			"description": "Toggle YouTube video speed between normal and 2x"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["tabs","scripting","activeTab","storage"],
	"host_permissions": [
		"https://www.youtube.com/*"
	],
	"content_scripts": [
		{
			"matches": ["https://www.youtube.com/*"],
			"js": ["content.js"]
		}
	],
	"icons": {
		"128": "icon128.png"
	}
}
